@model aspBattleArena.Models.Base

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Baza</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <input type="hidden" asp-for="BaseID" />
            <div class="form-group" style="margin-bottom:1em">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:1em">
                <label asp-for="Adress" class="control-label"></label>
                <input asp-for="Adress" class="form-control" />
                <span asp-validation-for="Adress" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:1em">
                <label asp-for="Organization" class="control-label"></label>
                <input asp-for="Organization.Name" class="form-control" />
            </div>
            <div class="form-group" style="margin-bottom:1em">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróæ do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
