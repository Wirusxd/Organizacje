@using aspBattleArena.Data
@using aspBattleArena.Controllers

@model aspBattleArena.Models.Boss

@{
    ViewData["Title"] = "Edit";
}
<h1>Edytuj szefa</h1>

<h4>Szef</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BossId" />
            <div class="form-group" style="margin-bottom:1em">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:1em">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:1em">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            
            <div class="form-group" style="margin-bottom:1em">
                <label asp-for="Nationality" class="control-label"></label>
                <select asp-for="Nationality" 
                        class="form-control" 
                        asp-items="Html.GetEnumSelectList<Nationality>()">
                    <option>Select nationality ...</option>
                </select>
                <span asp-validation-for="Nationality" class="text-danger"></span>
            </div>
            @* <div class="form-group"> *@
            @*     <label asp-for="Organization" class="control-label"></label> *@
            @*     <select asp-for="Organization" class="form-control"></select> *@
            @*     $1$ <span asp-validation-for="Organization" class="text-danger"></span> #1# *@
            @* </div> *@
            <div class="form-group" style="margin-bottom:1em">
                <label asp-for="OrganizationName" class="control-label"></label>
                <input asp-for="OrganizationName" class="form-control" />
               
            </div>
            <div class="form-group" style="margin-bottom:1em">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróæ do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
